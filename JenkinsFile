@Library('devops-lib') _

pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'docdon0007/jenkins:05'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Nikhil00-7/just.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                installDependencies()
            }
        }

        stage('Run Tests') {
            steps {
                runTests()
            }
        }

        stage('Docker Push') {
            steps {
                dockerPush(DOCKER_IMAGE, 'dockerhub-login')
            }
        }

        stage('K8s Deploy') {
            steps {
                k8s('k8s-master-ssh', '192.168.2.20')
            }
        }
    }

    post {
        success {
            successPost('kujurnikhil@gmail.com')
        }
        failure {
            failedPost('kujurnikhil@gmail.com')
        }
    }
}